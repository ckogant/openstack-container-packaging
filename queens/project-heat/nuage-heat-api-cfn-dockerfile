FROM registry.access.redhat.com/rhosp13/openstack-heat-api-cfn:latest
MAINTAINER Nuage OpenStack Engineering opensource@nuagenetworks.net

LABEL name="nuagenetworks-rhosp13/openstack-heat-api-cfn-5-3-2"
LABEL maintainer="opensource@nuagenetworks.net"
LABEL vendor="Nuage"
LABEL version="5.3.2"
LABEL release="1"
LABEL summary="Red Hat OpenStack Platform 13.0 heat-api-cfn Nuage Heat Plugin"
LABEL description="Red Hat OpenStack Platform 13.0 heat-api-cfn Nuage Heat Plugin"

USER root

COPY nuage.repo /etc/yum.repos.d/nuage.repo
RUN yum -y install --disablerepo "*" --enablerepo Nuage nuage-openstack-neutronclient && yum clean all

RUN rm -f /etc/yum.repos.d/nuage.repo

COPY licenses /licenses

USER heat
