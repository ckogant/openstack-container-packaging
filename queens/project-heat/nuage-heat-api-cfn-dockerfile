FROM registry.access.redhat.com/rhosp13/openstack-heat-api-cfn:latest

LABEL description="Red Hat OpenStack Platform 13.0 nuage-heat-api-cfn"
LABEL version-release=5.3.2
LABEL summary="Nuage Heat Plugin"
LABEL io.k8s.display-name="Red Hat OpenStack Platform 13.0 nuage-heat-api-cfn"
LABEL com.redhat.component="openstack-nuage-heat-api-cfn-docker"
LABEL name="rhosp13/openstack-nuage-heat-api-cfn"
LABEL version=13
LABEL release=5.3.2
LABEL architecture="x86_64"

USER root

COPY nuage.repo /etc/yum.repos.d/nuage.repo
RUN yum -y install --disablerepo "*" --enablerepo Nuage nuage-openstack-neutronclient && yum clean all

RUN rm -f /etc/yum.repos.d/nuage.repo

USER heat
