FROM registry.access.redhat.com/rhosp13/openstack-nova-compute:latest

LABEL description="6wind Nova Extension"
LABEL version-release=5.3.2
LABEL summary="6wind Nova Extension"
LABEL io.k8s.display-name="6wind Nova Extension"
LABEL com.redhat.component="openstack-nuage-nova-compute"
LABEL name="rhosp13/openstack-nuage-nova-compute"
LABEL version=13
LABEL release=5.3.2
LABEL architecture="x86_64"


USER root

COPY nuage.repo /etc/yum.repos.d/nuage.repo
RUN yum install --disablerepo "*" --enablerepo Nuage 6wind-openstack-extensions  -y && yum clean all

RUN rm -f /etc/yum.repos.d/nuage.repo

USER nova
